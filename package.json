{
  "name": "japanese-grammar-analyzer",
  "displayName": "Japanese Grammar Analyzer",
  "description": "日本語形態素解析VSCode拡張機能（外部依存なし）。文法チェック、セマンティックハイライト、ホバー情報を提供します。kuromoji.js内蔵でMeCab不要。",
  "version": "0.1.0",
  "publisher": "otak-lsp",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tsuyoshi-otake-system-exe-jp/otak-lsp"
  },
  "bugs": {
    "url": "https://github.com/tsuyoshi-otake-system-exe-jp/otak-lsp/issues"
  },
  "homepage": "https://github.com/tsuyoshi-otake-system-exe-jp/otak-lsp#readme",
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#F5F5F5",
    "theme": "light"
  },
  "keywords": [
    "japanese",
    "grammar",
    "mecab",
    "morphological-analysis",
    "linter",
    "semantic-highlighting"
  ],
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./client/out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "japaneseGrammarAnalyzer.toggle",
        "title": "Japanese Grammar Analyzer: ON/OFF切り替え"
      },
      {
        "command": "japaneseGrammarAnalyzer.showStatus",
        "title": "Japanese Grammar Analyzer: ステータス表示"
      },
      {
        "command": "japaneseGrammarAnalyzer.analyzeCurrentFile",
        "title": "Japanese Grammar Analyzer: 現在のファイルを解析"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Japanese Grammar Analyzer",
      "properties": {
        "japaneseGrammarAnalyzer.enableGrammarCheck": {
          "type": "boolean",
          "default": true,
          "description": "文法チェック機能の有効/無効。二重助詞、助詞連続、動詞-助詞不整合を検出します。",
          "scope": "resource"
        },
        "japaneseGrammarAnalyzer.enableSemanticHighlight": {
          "type": "boolean",
          "default": true,
          "description": "品詞ベースのセマンティックハイライト機能の有効/無効",
          "scope": "resource"
        },
        "japaneseGrammarAnalyzer.targetLanguages": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["markdown", "javascript", "typescript", "python", "c", "cpp", "java", "rust", "plaintext"]
          },
          "default": ["markdown", "javascript", "typescript", "python", "c", "cpp", "java", "rust", "plaintext"],
          "description": "解析対象のファイルタイプ。プログラミング言語ではコメント内の日本語を解析します。",
          "scope": "resource"
        },
        "japaneseGrammarAnalyzer.debounceDelay": {
          "type": "number",
          "default": 500,
          "minimum": 100,
          "maximum": 5000,
          "description": "テキスト編集後に解析を開始するまでの遅延時間（ミリ秒）",
          "scope": "resource"
        }
      }
    },
    "semanticTokenTypes": [
      { "id": "noun", "description": "名詞", "superType": "variable" },
      { "id": "verb", "description": "動詞", "superType": "function" },
      { "id": "adjective", "description": "形容詞", "superType": "property" },
      { "id": "particle", "description": "助詞", "superType": "keyword" },
      { "id": "adverb", "description": "副詞", "superType": "parameter" },
      { "id": "other", "description": "その他", "superType": "string" }
    ],
    "semanticTokenScopes": [
      {
        "scopes": {
          "noun": ["entity.name.variable.japanese"],
          "verb": ["entity.name.function.japanese"],
          "adjective": ["entity.name.property.japanese"],
          "particle": ["keyword.other.japanese"],
          "adverb": ["support.variable.japanese"],
          "other": ["string.japanese"]
        }
      }
    ],
    "configurationDefaults": {
      "editor.semanticTokenColorCustomizations": {
        "enabled": true,
        "rules": {
          "noun": {
            "foreground": "#4EC9B0"
          },
          "verb": {
            "foreground": "#DCDCAA"
          },
          "adjective": {
            "foreground": "#9CDCFE"
          },
          "particle": {
            "foreground": "#569CD6"
          },
          "adverb": {
            "foreground": "#C586C0"
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --production",
    "compile": "npm run esbuild-base",
    "esbuild-base": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "compile:tsc": "tsc -b",
    "lint": "eslint ./client/src ./server/src ./shared/src --ext .ts",
    "lint:fix": "eslint ./client/src ./server/src ./shared/src --ext .ts --fix",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage",
    "clean": "rimraf ./client/out ./server/out ./shared/out",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.0",
    "@types/kuromoji": "^0.1.3",
    "esbuild": "^0.19.0",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.45.0",
    "fast-check": "^3.15.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "kuromoji": "^0.1.2",
    "vscode-languageclient": "^9.0.0",
    "vscode-languageserver": "^9.0.0",
    "vscode-languageserver-textdocument": "^1.0.0"
  }
}
